{
  "name": "cosmicplayground",
  "version": "0.1.0",
  "description": "tools and toys for expanding minds: ear training, music theory, etc etc",
  "license": "ISC",
  "homepage": "https://cosmicplayground.org",
  "scripts": {
    "start": "NODE_ENV=development TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\"}' TS_NODE_TRANSPILE_ONLY=1 ts-node src/project/build/build.ts --watch",
    "build": "NODE_ENV=production TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\"}' TS_NODE_TRANSPILE_ONLY=1 ts-node src/project/build/build.ts",
    "buildDev": "NODE_ENV=development TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\"}' TS_NODE_TRANSPILE_ONLY=1 ts-node src/project/build/build.ts",
    "clean": "rm -rf build static/bundle.*",
    "deploy": "NODE_ENV=production TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\"}' TS_NODE_TRANSPILE_ONLY=1 ts-node src/project/deploy/deploy.ts",
    "deployDry": "NODE_ENV=production TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\"}' TS_NODE_TRANSPILE_ONLY=1 ts-node src/project/deploy/deploy.ts --dry",
    "typecheck": "tsc --noEmit",
    "test": "echo \"TODO add tests\" && exit 1",
    "format": "./node_modules/.bin/prettier --write src/**/*.{js,ts,json,html,svelte,md}"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ryanatkn/cosmicplayground.git"
  },
  "bugs": {
    "url": "https://github.com/ryanatkn/cosmicplayground/issues"
  },
  "keywords": [
    "ear training",
    "music theory",
    "web audio",
    "web midi"
  ],
  "author": {
    "name": "Ryan Atkinson",
    "email": "ryanatkn@gmail.com",
    "url": "https://ryanatkn.com"
  },
  "engines": {
    "node": ">=12"
  },
  "devDependencies": {
    "@feltcoop/gro": "^0.2.5",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@rollup/pluginutils": "^3.1.0",
    "@types/css-tree": "^1.0.0",
    "@types/dotenv": "^6.1.1",
    "@types/fs-extra": "^7.0.0",
    "@types/minimist": "^1.2.0",
    "@types/node": "^12.0.8",
    "@types/prettier": "^2.0.2",
    "css-tree": "^1.0.0-alpha22",
    "dotenv": "^8.0.0",
    "fs-extra": "^8.0.1",
    "kleur": "^3.0.3",
    "minimist": "^1.2.3",
    "prettier": "^2.0.5",
    "prettier-plugin-svelte": "^1.1.0",
    "rollup": "^2.21.0",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-typescript": "^1.0.1",
    "sourcemap-codec": "^1.4.4",
    "svelte": "^3.6.4",
    "ts-node": "^8.3.0",
    "tslib": "^2.0.0",
    "typescript": "^3.9.7"
  },
  "dependencies": {},
  "prettier": {
    "useTabs": true,
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false,
    "svelteSortOrder": "scripts-markup-styles",
    "svelteBracketNewLine": true,
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "useTabs": false
        }
      }
    ]
  }
}
